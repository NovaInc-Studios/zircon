{
    "compilerOptions": {
        // required
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "noLib": true,
        "strict": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "Node",
        "typeRoots": [
            "../node_modules/@rbxts"
        ],
        "removeComments": true,
        "moduleDetection": "force",

        "rootDirs": [
            "server",
            "client",
            "../src",
        ],

        "outDir": "build",
        "baseUrl": "../src",

        "paths": {
            "@zircon": ["../src"],
            "@zircon/*": ["../src/*"]
        },
        "jsx": "react",
        "jsxFactory": "Roact.createElement",
        "plugins": [
			{
				"transform": "rbxts-transform-env"
			},
			{
				"transform": "rbxts-transform-debug",
                "environmentRequires": {
					"NODE_ENV": "development"
				}
			}
		]
    },
    "include": [
        "**/*",
        "../src/**/*"
    ]
}